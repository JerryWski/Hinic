---

import data from '../../data/productsPreview.json';
import { t } from 'i18next';

---

<div class='cards-content'>
  {
    data.map((item) => (
      <div class='card'>
        <div class='content'>
          <div class='gradient'>
            <h3 class='card-title'>{t(item.name)}</h3>
          </div>
          <img class='card-image' src={item.image} alt={item.name} />
        </div>
      </div>
    ))
  }
</div>

<style>
  .cards-content {
    display: none;
  }
  .content {
    transform: scale(1);
    background: transparent;
    z-index: 100;
    transition: 0.3s all ease;
  }
  .content:hover {
    transform: scale(1.1);
  }

  .card {
    position: relative;
    max-width: 100%;
    font-family: var(--second-font);
  }
  .gradient {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    background-image: linear-gradient(to top, #000000, #00000018, #ffffff00);
    position: absolute;
    inset: 0;
    transition: 0.3s all ease;
    opacity: 0.8;
    z-index: 1;
  }
  .gradient:hover {
    opacity: 0.5;
  }
  .card-image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: 0.3s all ease;
    box-shadow: 0px 5px 30px 0px rgba(0, 0, 0, 0.1);
  }

  .card-title {
    display: block;
    font-size: 1.4rem;
    margin: 15px;
    color: white;
  }
  .card-text {
    text-align: center;
    max-width: 265px;
    height: 100px;
  }
  @media (min-width: 900px) {
    .cards-content {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: flex-start;
      margin-top: 40px;
      gap: 50px;
    }
  }
</style>
