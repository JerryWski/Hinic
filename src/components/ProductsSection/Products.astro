---
import i18next, { t } from 'i18next';
import { localizePath } from 'astro-i18next';
import Cards from './Cards.astro';


---

<section class='products-section'>
  <h2 class='products-header'>Nasza Oferta</h2>
  <div class='products-wrapper'>
    <div class='products-info'>
      <p class='products-text'>
        Oferujemy profesjonalne produkty nikotynowe, które zaspokoją rosnące
        zapotrzebowanie rynku oraz Klientów o różnych wymaganiach.
      </p>
      <div class='card-container'>
        <Cards />

        <a class='products-link' href={localizePath('/produkty')}
          >{t('products.link')}</a
        >
      </div>
    </div>
  </div>
</section>
<style>
 

  .products-section {
    padding: 20px;
    padding-top: 80px;
    /* background: rgb(192, 213, 240); */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: var(--font-blue);
  }
  .products-wrapper {
    max-width: 1300px;
    display: block;
  }
  .products-header {
    font-size: clamp(2.3rem, 3vw, 3.5rem);
    font-family: var(--main-font);
    margin-bottom: 30px;
    font-family: var(--roboto-font);
  }
  .products-info {
    display: flex;
    flex-direction: column;
  }
  .products-text {
    margin-bottom: 10px;
    opacity: 0.7;
    font-family: var(--second-font);
    font-size: clamp(1rem, 1vw, 1.5rem);
    line-height: 24px;
    text-align: center;
  }
  .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin-top: 40px;
    gap: 40px;
  }
  
  .products-link {
    font-family: var(--second-font);
    color: var(--bg-black);
    margin-top: 60px;
    margin-bottom: 20px;
    align-self: center;
    width: 200px;
    outline: none;
    text-align: center;
    padding: 15px 35px;
    background-color: var(--bg-white);
    font-size: 1.4rem;
    cursor: pointer;
    transition: 0.3s all ease-in-out;
  }
  .products-link:hover {
    background-color: transparent;
    color: var(--bg-white);
    outline: 1px solid var(--bg-white);
  }
  @media (min-width: 900px) {
    .products-link {
      width: 250px;
    }
  }
</style>

