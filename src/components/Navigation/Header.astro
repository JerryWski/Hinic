---
import i18next, { t } from 'i18next';
import { localizePath } from "astro-i18next";
import { LanguageSelector } from "astro-i18next/components";

---

<div class='nav-links'>
 
  <a class='link' href={localizePath("/o_nas")}>
    {t('navbar.about')}
  </a>
  <a class='link' href={localizePath("/produkty")}>
    {t('navbar.products')}
  </a>
  <a class='link' href={localizePath("/zamowienia")}>
    {t('navbar.orders')}
  </a>
  <a class='link' href='#contact'> Kontakt</a>
  <LanguageSelector
  showFlag={true}
  languageMapping={{ en: "Anglais" }}
  class="my-select-class"
/>
</div>

<style>
  .nav-links {
    padding-left: 150px;
    display: flex;
    gap: 50px;
  }
</style>