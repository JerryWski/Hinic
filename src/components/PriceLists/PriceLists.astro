---
import { Image } from 'astro:assets';
import { t, changeLanguage } from 'i18next';
import { Trans } from 'astro-i18next/components';
import Icon from 'astro-icon';
import prices from '../../assets/additions.webp';
import prices1 from '../../assets/prices-basic-1.webp';
import prices2 from '../../assets/prices-basic-2.webp';
import prices3 from '../../assets/prices-basic-3.webp';
---

<h2 class='prices-header'>Cenniki</h2>
<div class='prices-wrapper'>
  <!-- <div class='links-box'>
    <a download='/additions.pdf' href='/'
      >- {t('products.link-one')}
      <Icon class='icon' name='download' width={30} /></a
    >
    <a download='/prices-basic.pdf' href='/'
      >- {t('products.link-two')}
      <Icon class='icon' name='download' width={30} /></a
    >
    <a download='/prices-disc.pdf' href='/'
      >- {t('products.link-three')}
      <Icon class='icon' name='download' width={30} /></a
    >
  </div> -->
  <div class='header-wrapper'>
    <h3>* Dodatki, kannaboidy, izolaty *</h3>
    <a class='prices-link' download='/additions.pdf' href='/additions.pdf'
      >- Ściągnij plik .pdf -
      <Icon class='icon' name='download' width={30} /></a
    >
  </div>
  <div>
    <Image class='img one' src={prices} alt='prices-list' />
  </div>

  <div class='header-wrapper'>
    <h3>* Aromaty *</h3>
    <a class='prices-link' download='/prices-basic.pdf' href='/prices-basic.pdf'
      >- Ściągnij plik .pdf -
      <Icon class='icon' name='download' width={30} /></a
    >
  </div>
  <div class='prices-two'>
    <Image class='img two' src={prices1} alt='prices-list' />
    <Image class='img three' src={prices2} alt='prices-list' />
    <Image class='img four' src={prices3} alt='prices-list' />
  </div>

  <div class='header-wrapper'>
    <h3>* Aromaty(rabaty) *</h3>
    <a class='prices-link' download='/prices-disc.pdf' href='/prices-disc.pdf'
      >- Ściągnij plik .pdf -
      <Icon class='icon' name='download' width={30} /></a
    >
  </div>
  <div>
    <Image class='img four' src={prices3} alt='prices-list' />
  </div>
</div>

<style>
  .header-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .prices-header {
    text-align: center;
    font-family: var(--roboto-font);
    font-size: clamp(3.2rem, 3vw, 5rem);
    color: var(--logo-blue);
    max-width: 300px;
    margin-top: 50px;
    padding-top: 50px;
    margin-bottom: 40px;
    margin-inline: auto;
    border-bottom: 2px solid var(--logo-blue);
  }

  .prices-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }
  .prices-two {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 30px;
    margin-top: -10px;
  }
  .prices-two img {
    margin-top: 0;
  }
  .img {
    width: 100%;
    max-width: 1100px;
    margin: auto;
    padding: 5px;
    height: auto;
    object-fit: contain;
  }
  .img.two,
  .img.three,
  .img.four {
    max-width: 500px;
  }
  h3 {
    font-family: var(--roboto-font);
    color: var(--logo-blue);
    text-align: center;
    font-size: clamp(1.7rem, 2.5vw, 2rem);
    margin-top: 30px;
    margin-bottom: 10px;
  }
.header-wrapper a {
    padding: 4px;
    color: var(--font-blue);
    font-size: .8rem;
    font-family: var(--roboto-font);
    text-transform: uppercase;
}
.header-wrapper a:hover {
    opacity: .8;
}
  .icon {
    width: 20px;
  }
  @media (min-width: 900px) {
    .prices-two {
      gap: 50px;
    }
    .prices-two img {
      margin-inline: 0;
    }
    .icon {
      display: block;
      color: var(--font-blue);
      width: 40px;
    }
  }
</style>
