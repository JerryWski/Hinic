---
import Icon from "astro-icon"
import { t, changeLanguage } from "i18next";



---

<div class='advantages-wrapper'>
        <h2 class='about-subheader'>{t('about.avantages')}</h2>
        <div class='advantages-container'>
          <div class='advantages'>
            <div class='image-wrapper one'>
              <Icon name='truck' />
            </div>
            <h2 class='advantages-header'>
              {t('about.experience')}
            </h2>
            <p class='advantages-text'>
              {t('about.experience-text')}
            </p>
          </div>
          <div class='advantages'>
            <div class='image-wrapper two'>
              <Icon name='team' />
            </div>
            <h2 class='advantages-header'>{t('about.performance')}</h2>
            <p class='advantages-text'>
              {t('about.performance-text')}
            </p>
          </div>
          <div class='advantages'>
            <div class='image-wrapper three'>
              <Icon name='research' />
            </div>
            <h2 class='advantages-header'>{t('about.research')}</h2>
            <p class='advantages-text'>
              {t('about.research-text')}
            </p>
          </div>
        </div>
      </div>

      <style>
        .advantages-wrapper {
    background-color: var(--font-blue);
    background-image: linear-gradient(
      to bottom,
      #031b4e,
      #021946,
      #02173e,
      #031536,
      #05122e
    );
    color: var(--bg-white);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    flex-wrap: wrap;
    padding: 20px;
    font-family: var(--main-font);
  }
  .advantages-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .advantages-wrapper .about-subheader {
    color: var(--bg-white);
    margin-top: 30px;
    margin-bottom: 30px;
    font-size: clamp(3.2rem, 3vw, 6rem);
  }
  .advantages {
    margin-block: 30px;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 15px;
  }
  .image-wrapper {
    width: 125px;
    margin-bottom: 15px;
    padding: 15px;
    cursor: pointer;
    position: relative;
  }
  .image-wrapper.three {
    padding: 15px;
    width: 125px;
  }
  .one::before,
  .two::before,
  .three::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    border: 2px solid var(--bg-white);
    box-sizing: border-box;
    z-index: 1;
    transition: all 0.3s ease;
  }
  .one:hover::before,
  .two:hover::before,
  .three:hover::before {
    transform: rotate(45deg);
    border-radius: 50%;
    background-color: var(--bg-white);
  }
  .one::after,
  .two::after,
  .three::after {
    content: '';
    position: absolute;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
    z-index: 1;
  }
  .one:hover::after {
    background-image: url('/src/assets/truck-svg-black.svg');
    background-repeat: no-repeat;
    background-position: center center;
  }
  .two:hover::after {
    background-image: url('/src/assets/team-svg-black.svg');
    background-repeat: no-repeat;
    background-position: center center;
  }
  .three:hover::after {
    background-image: url('/src/assets/research-svg-black.svg');
    background-repeat: no-repeat;
    background-position: center center;
  }
  .advantages-img {
    width: 100%;
    object-fit: contain;
  }
  .advantages-header {
    margin-bottom: 10px;
    font-size: 1.4rem;
  }
  .advantages-text {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  @media (min-width: 900px) {
    .advantages-wrapper {
      justify-content: space-around;
      align-items: center;
    }
    .advantages-container {
      gap: 40px;
      justify-content: center;
      align-items: center;
    }
    .advantages {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .advantages-header {
      height: 62px;
    }
    .advantages-text {
      height: 95px;
    }
  }
      </style>